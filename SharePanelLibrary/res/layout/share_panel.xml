<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/share_panel_padding"
    android:paddingRight="@dimen/share_panel_padding"
    android:paddingBottom="@dimen/share_panel_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/panel_share_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_panel_title_height"
        android:gravity="center"
        android:textSize="@dimen/share_panel_title_size"
        android:text="@string/share_panel_title" />
    <View 
        android:layout_width="match_parent" 
        android:layout_height="1px" 
        android:layout_marginTop="2dp" 
        android:layout_marginBottom="2dp" 
        android:background="#000000" />
    
    <GridView 
        android:id="@+id/panel_share_gridview" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:columnWidth="5dp"
        android:numColumns="4" />

</LinearLayout>